<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Form of Tender – Grand Total"
        Height="240" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="GRAND TOTAL – FORM OF TENDER"
                   FontSize="14"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,20,0,20">
            <TextBlock Text="Total Project Cost:"
                       FontSize="12"/>

            <TextBlock x:Name="TotalText"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="DarkGreen"
                       TextWrapping="Wrap"
                       Text="ZMW 0.00"/>

            <TextBlock x:Name="UpdatedText"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Refresh"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="OnRefresh"/>
            <Button Content="Close"
                    Width="90"
                    Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
